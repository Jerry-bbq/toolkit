{
  "name": "@genlib/toolkit",
  "private": true,
  "packageManager": "pnpm@10.16.1",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "release": "changeset version && pnpm -r build && changeset publish",
    "bench": "node packages/core/bench.mjs",
    "docs:site": "pnpm exec vitepress dev docs-site",
    "docs:build": "pnpm exec vitepress build docs-site",
    "docs:preview": "pnpm exec vitepress preview docs-site"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@microsoft/api-extractor": "^7.53.3",
    "@types/node": "^24.9.2",
    "changesets": "^1.0.2",
    "tinybench": "^5.1.0",
    "tsup": "^8.5.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vitepress": "2.0.0-alpha.12",
    "vitest": "^4.0.6"
  }
}
