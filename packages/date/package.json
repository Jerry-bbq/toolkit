{
  "name": "@genlib/toolkit-date",
  "version": "0.1.0",
  "description": "日期工具（显式 API，无全局 polyfill）",
  "keywords": ["date", "datetime", "date-utils", "typescript", "esm"],
  "license": "MIT",
  "author": "genlib",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jerry-bbq/toolkit.git",
    "directory": "packages/date"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "lint": "biome check src"
  },
  "engines": { "node": ">=18" }
}
